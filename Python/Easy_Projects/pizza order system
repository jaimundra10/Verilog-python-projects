print("üçï Welcome to Python Pizza Deliveries!")

size = input("What size pizza do you want? (S/M/L): ").upper()
add_pepperoni = input("Do you want pepperoni? (yes/no): ").lower()
extra_cheese = input("Do you want extra cheese? (yes/no): ").lower()

bill = 0

if size == "S":
    bill += 15
elif size == "M":
    bill += 20
elif size == "L":
    bill += 25

if add_pepperoni == "yes":
    if size == "S":
        bill += 2
    else:
        bill += 3

if extra_cheese == "yes":
    bill += 1

print(f"üßæ Your final bill is: ‚Ç¨{bill}")
